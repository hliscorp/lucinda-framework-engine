{
    "name": "lucinda/framework-engine",
    "type": "library",
    "description": "API integration engine for Lucinda Framework 3.0",
    "homepage": "https://github.com/aherne/lucinda-framework-engine",
    "license": "MIT",
    "authors": [
        {
            "name": "Lucian Popescu",
            "email": "lucian.gabriel.popescu@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Lucinda\\Framework\\": "src/",
            "Test\\Lucinda\\Framework\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-simplexml": "*",
        "lucinda/logging": "~4.0",
        "lucinda/oauth2-client": "~3.0",
        "lucinda/security": "~4.0",
        "lucinda/mvc": "~4.0",
        "lucinda/console-mvc": "~2.0",
        "lucinda/errors-mvc": "~3.0",
        "lucinda/headers": "~2.0"
    },
    "require-dev": {
        "lucinda/unit-testing": "^2.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/hliscorp/errors-api"
        },
        {
            "type": "vcs",
            "url": "https://github.com/hliscorp/php-logging-api"
        },
        {
            "type": "vcs",
            "url": "https://github.com/hliscorp/php-servlets-api"
        },
        {
            "type": "vcs",
            "url": "https://github.com/hliscorp/oauth2client"
        },
        {
            "type": "vcs",
            "url": "https://github.com/hliscorp/php-security-api"
        },
        {
            "type": "vcs",
            "url": "https://github.com/hliscorp/unit-testing"
        },
        {
            "type": "vcs",
            "url": "https://github.com/hliscorp/console_mvc"
        },
        {
            "type": "vcs",
            "url": "https://github.com/hliscorp/headers-api"
        }
    ]
}
